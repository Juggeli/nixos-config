snippet mod Nix module
  { config, lib, pkgs, ... }:
  with lib;
  with lib.plusultra; let
    cfg = config.plusultra.apps.${1};
  in
  {
    options.plusultra.apps.${1} = with types; {
      enable = mkBoolOpt false "Whether or not to enable ${1}.";
    };

    config = mkIf cfg.enable {
      ${2}
    };
  }
